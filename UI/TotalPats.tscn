script/source = "extends PanelContainer

@onready var amount_label: Label = %AmountLabel

func _ready() -> void:
	update_pats_stats()
	SignalBus.total_pats_changed.connect(_total_pats_changed)
	SignalBus.passive_income_rate_changed.connect(_pats_passive_income_changed)

func _total_pats_changed(_pats: float) -> void:
	update_pats_stats()

func _pats_passive_income_changed(_income: float) -> void:
